<p> <%= controller.controller_name%>:show_list</p>
<!-- views/subjects/show_list.html.erb -->
<div class= "container overlay">
	<div class="row">
  	<div class="col-sm-3">
			<h2>All Subjects</h2>
		</div>
	</div>
	<br><br>
	<% Subject.all.each do |s| %>
    <div class="row">
  		<div class="col-sm-2">
  			<%= link_to image_tag(s.icon, class: "img-responsive icon"), show_resources_path(id: s.id) %>
      </div>
  		<div class="col-sm-2">
  			 <%= s.name %> 
  		</div>
  		<div class="col-sm-8">
  			  <%= s.description %>
  		</div>
  	</div>
  	<br><br><br>
 	<% end %>	
</div>	

 